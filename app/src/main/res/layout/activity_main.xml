<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a15056158.medsreminder.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="Welcome to Medication App"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Welcome to Medication App" />

    <ImageButton
        android:id="@+id/imageButtonAbout"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_weight="0.18"
        app:srcCompat="@drawable/med2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="About Us"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/imageButtonReminder"
        android:layout_width="wrap_content"
        android:layout_height="117dp"
        app:srcCompat="@drawable/med1"
        android:layout_weight="0.40" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="Medication Reminder"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/imageButtonInformation"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        app:srcCompat="@drawable/med3"
        android:layout_weight="0.18"/>

    <TextView
        android:id="@+id/textViewInfomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="Medication Checklist"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>




</LinearLayout>
